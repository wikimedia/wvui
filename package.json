{
  "name": "@wikimedia/wvui",
  "author": "Wikimedia",
  "description": "Vue.js user interface components for Wikipedia, MediaWiki, and beyond.",
  "version": "0.0.0",
  "keywords": [
    "Vue.js",
    "components",
    "Wikipedia",
    "MediaWiki",
    "Wikimedia"
  ],
  "homepage": "https://github.com/wikimedia/wvui",
  "repository": "github:wikimedia/wvui",
  "bugs": "https://phabricator.wikimedia.org/tag/vue.js",
  "license": "GPL-2.0+",
  "scripts": {
    "start": "start-storybook --quiet -p 3003",
    "test:unit": "jest -c .jest/jest.config.json",
    "test": "npm -s run test:unit && npm -s run test:lint && npm -s run test:size && npm -s run docs",
    "test:lint": "npm -s run test:lint:etc && npm run -s test:lint:styles && npm run -s test:lint:js",
    "test:lint:styles": "npm -s run linter:styles -- .",
    "test:lint:js": "npm -s run linter:js -- .",
    "test:lint:etc": "npm -s run linter:etc -- -l",
    "test:size": "bundlesize",
    "docs": "npm -s run docs:ui && npm -s run docs:size",
    "docs:ui": "build-storybook --quiet --loglevel warn -o docs/ui",
    "docs:size": "npm -s run test:size > docs/minGzipBundleSize.txt",
    "version": "npm t",
    "format": "npm -s run format:etc && npm -s run format:js && npm -s run format:styles",
    "format:etc": "npm -s run linter:etc -- --write",
    "format:js": "npm -s run linter:js -- --fix .",
    "format:styles": "npm -s run linter:styles -- --fix .",
    "linter:etc": "prettier './**/*.{json,md}'",
    "linter:js": "eslint --cache --max-warnings 0 --report-unused-disable-directives --ext .js,.json,.ts,.vue",
    "linter:styles": "stylelint --cache --rd --mw 0",
    "preversion": "[ -z \"$(git status -z)\" ]",
    "postversion": "npm publish",
    "prepublishOnly": "git push origin \"$(git rev-parse --abbrev-ref @)\" \"$(git tag --points-at @)\""
  },
  "peerDependencies": {
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@storybook/addon-a11y": "6.0.0-beta.27",
    "@storybook/addon-actions": "6.0.0-beta.27",
    "@storybook/addon-backgrounds": "6.0.0-beta.27",
    "@storybook/addon-knobs": "6.0.0-beta.27",
    "@storybook/addon-links": "6.0.0-beta.27",
    "@storybook/addon-storysource": "6.0.0-beta.27",
    "@storybook/addon-viewport": "6.0.0-beta.27",
    "@storybook/vue": "6.0.0-beta.27",
    "@types/jest": "26.0.0",
    "@types/mini-css-extract-plugin": "0.9.1",
    "@types/vue": "2.0.0",
    "@typescript-eslint/eslint-plugin": "3.3.0",
    "@typescript-eslint/parser": "3.3.0",
    "@vue/test-utils": "1.0.3",
    "babel-core": "6.26.3",
    "babel-loader": "8.1.0",
    "babel-preset-vue": "2.0.2",
    "bundlesize": "0.18.0",
    "css-loader": "3.5.3",
    "eslint": "7.3.0",
    "eslint-config-wikimedia": "0.16.2",
    "eslint-plugin-jest": "23.16.0",
    "eslint-plugin-no-jquery": "2.5.0",
    "fork-ts-checker-webpack-plugin": "5.0.5",
    "jest": "26.0.0",
    "less-loader": "6.1.0",
    "mini-css-extract-plugin": "0.9.0",
    "pre-commit": "1.2.2",
    "prettier": "2.0.5",
    "stylelint": "13.6.1",
    "stylelint-config-wikimedia": "0.10.1",
    "ts-jest": "26.0.0",
    "ts-loader": "7.0.4",
    "typescript": "3.9.2",
    "vue": "2.6.11",
    "vue-jest": "3.0.5",
    "vue-loader": "15.9.2",
    "vue-template-compiler": "2.6.11",
    "webpack": "4.43.0"
  }
}
